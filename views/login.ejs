<body>
  <form method="post" action="/login" onsubmit="formCheck(this); return false;"class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
      <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
      <div class="login-form">
        <div class="sign-in-htm">
          <div class="group">
            <label for="user" class="label">Username</label>
            <input type="email" class="input" id="admin" name="adminEmail" maxlength="100" placeholder="EMAIL" required>
          </div>
          <div class="group">
            <label for="pass" class="label">Password</label>
            <input type="password"  class="input" id="password" name="password" autocomplete placeholder="PASSWORD" required >
          </div>
          <div class="group">
            <label for="pass" class="label">code</label>
            <input id="pass" class="input" id="code" name="code" maxlength="100" placeholder="CODE" required>
          </div>
          <div class="group">
            <button type="button" onclick="sendCode()" class="button">인증번호</button>
          </div>
          <div class="group">
            <button type="submit" class="button">로그인</button>
          </div>
        </div>
      </div>
    </div> 
</form>
</body>
</html>

