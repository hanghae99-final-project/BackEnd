      })
    }
  }

  function formCheck(obj) {


    let $id = $('#admin').val()
    let $pwd = $('#password').val()
    // let $code = $("#authNumber").val();
    if (!$id) {
      alert('아이디를 입력해주세요.')
      return false
    } else if (!$pwd) {
